{
  "manifest_version": 3,
  "name": "Unified Shopping Cart",
  "version": "0.1.26",
  "description": "Aggregate shopping carts across sites into one dashboard.",
  "permissions": ["storage"],

  "background": { "service_worker": "background.js" },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["inpage/pageHook.inpage.js"],
      "matches": ["*://*/*"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "exclude_matches": [
        "*://*/cart*",
        "*://*/checkout*",
        "*://*/wishlist*",
        "*://*/account*",
        "*://*/login*",
        "*://*/register*",
        "*://*/search*",
        "*://*/help*",
        "*://*/privacy*",
        "*://*/terms*",
        "*://*/sitemap*"
      ],
      "js": ["content-scripts/pageHook.js"],
      "run_at": "document_start",
      "all_frames": false
    },

    {
      "matches": ["*://*.amazon.com/*"],
      "js": [
        "content-scripts/amazonAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["*://*.shopbop.com/*"],
      "js": [
        "content-scripts/shopbopAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["*://*.walmart.com/*"],
      "js": [
        "content-scripts/walmartAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["*://*.zara.com/*"],
      "js": [
        "content-scripts/zaraAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["*://*.net-a-porter.com/*"],
      "js": [
        "content-scripts/netaporterAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["*://*.ebay.com/*"],
      "js": [
        "content-scripts/genericAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
  "matches": ["*://*.bergdorfgoodman.com/*"],
  "js": [
    "content-scripts/bergdorfAddListener.js",
    "content-scripts/toastListener.js"
  ],
  "run_at": "document_idle",
  "all_frames": true
},
{
  "matches": ["*://*.bloomingdales.com/*"],
  "js": [
    "content-scripts/bloomingdalesAddListener.js",
    "content-scripts/toastListener.js"
  ],
  "run_at": "document_idle",
  "all_frames": true
},

    {
      "matches": ["*://*/*"],
      "exclude_matches": [
        "*://*/cart*",
        "*://*/checkout*",
        "*://*/wishlist*",
        "*://*/account*",
        "*://*/login*",
        "*://*/register*",
        "*://*/search*",
        "*://*/help*",
        "*://*/privacy*",
        "*://*/terms*",
        "*://*/sitemap*",

        "*://*.amazon.com/*",
        "*://*.walmart.com/*",
        "*://*.zara.com/*",
        "*://*.shopbop.com/*",
        "*://*.net-a-porter.com/*",
        "*://*.ebay.com/*"
      ],
      "js": [
        "content-scripts/genericAddListener.js",
        "content-scripts/toastListener.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}